<idea-plugin>
    <id>com.daveme.intellij.chocolateCakePHP</id>
    <name>Chocolate CakePHP</name>
    <version>0.3.0</version>
    <vendor email="dmeybohm@gmail.com" url="">David Meybohm</vendor>

    <description><![CDATA[
      Autocompletion and navigation for CakePHP.<br><br>

      Only version 2 of the framework at the moment is supported, but eventually version 3 support will
      be implemented.<br><br>
      
      Current features:

      <ul>
        <li>Navigate and autocomplete $this->Model->someMethod and $this->Component->someMethod inside controllers</li>
        <li>Navigate and autocomplete $this->ViewHelper->someMethod inside view files.</li>
        <li>Navigate to $this->ViewHelper in view files when clicking on "ViewHelper"</li>
        <li>Navigate to $this->{Model,Component} in controller files when clicking on $this->{Model,Component}</li>
        <li>Navigate from controller to view file by clicking on Cake Icon in the left gutter</li>
        <li>Navigate to models, components, and views by Control/Cmd-clicking inside $uses, $components, and $views variables in a controller</li>
      </ul>
    ]]>
    </description>

    <change-notes>

    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="182.4129"/>
    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="PHP" implementationClass="com.daveme.intellij.chocolateCakePHP.completion.ControllerCompletionContributor" />
        <completion.contributor language="PHP" implementationClass="com.daveme.intellij.chocolateCakePHP.completion.ViewHelperCompletionContributor" />
        <gotoDeclarationHandler implementation="com.daveme.intellij.chocolateCakePHP.navigation.ElementGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.intellij.chocolateCakePHP.navigation.TemplateGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.intellij.chocolateCakePHP.navigation.ControllerFieldGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.intellij.chocolateCakePHP.navigation.ViewHelperGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.intellij.chocolateCakePHP.navigation.ControllerComponentsGotoDeclarationHandler" />
        <codeInsight.lineMarkerProvider language="PHP" implementationClass="com.daveme.intellij.chocolateCakePHP.navigation.ControllerMethodLineMarker" />`
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider3 implementation="com.daveme.intellij.chocolateCakePHP.typeProvider.ControllerFieldTypeProvider" />
        <typeProvider3 implementation="com.daveme.intellij.chocolateCakePHP.typeProvider.ViewHelperInViewTypeProvider" />
        <typeProvider3 implementation="com.daveme.intellij.chocolateCakePHP.typeProvider.ViewHelperInViewHelperTypeProvider" />
    </extensions>
    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <application-components>
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
</idea-plugin>
