<idea-plugin>
    <id>com.daveme.intellij.chocolateCakePHP</id>
    <name>Chocolate CakePHP</name>
    <version>0.6.0</version>
    <vendor email="dmeybohm@gmail.com" url="">David Meybohm</vendor>

    <description><![CDATA[
      Autocompletion and navigation for CakePHP.<br><br>

      Most of the features support Cake 2, but some have been implemented for Cake 3. Work on this is ongoing.<br><br>
      
      Current features:

      <ul>
        <li>Navigate and autocomplete $this->Model->someMethod and $this->Component->someMethod inside controllers</li>
        <li>Navigate and autocomplete $this->ViewHelper->someMethod inside view files.</li>
        <li>Navigate to $this->ViewHelper in view files when clicking on "ViewHelper"</li>
        <li>Navigate to $this->{Model,Component} in controller files when clicking on $this->{Model,Component}</li>
        <li>Navigate from controller to view file by clicking on Cake Icon in the left gutter</li>
        <li>Navigate to models, components, and views by Control/Cmd-clicking inside $uses, $components, and $views variables in a controller</li>
      </ul>
    ]]>
    </description>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="183.5429"/>
    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.daveme.chocolateCakePHP.Settings" />

        <projectConfigurable parentId="reference.webide.settings.project.settings.php"
                             displayName="Chocolate CakePHP"
                             id="chocolatecakephp.Settings"
                             instance="com.daveme.chocolateCakePHP.ConfigForm" />

        <completion.contributor language="PHP" implementationClass="com.daveme.chocolateCakePHP.completion.ControllerCompletionContributor" />
        <completion.contributor language="PHP" implementationClass="com.daveme.chocolateCakePHP.completion.ViewHelperCompletionContributor" />

        <gotoDeclarationHandler implementation="com.daveme.chocolateCakePHP.navigation.ElementGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.chocolateCakePHP.navigation.TemplateGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.chocolateCakePHP.navigation.ControllerFieldGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.chocolateCakePHP.navigation.ViewHelperGotoDeclarationHandler" />
        <gotoDeclarationHandler implementation="com.daveme.chocolateCakePHP.navigation.ControllerComponentsGotoDeclarationHandler" />

        <codeInsight.lineMarkerProvider language="PHP" implementationClass="com.daveme.chocolateCakePHP.navigation.ControllerMethodLineMarker" />

    </extensions>

    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider3 implementation="com.daveme.chocolateCakePHP.typeProvider.ControllerFieldTypeProvider" />
        <typeProvider3 implementation="com.daveme.chocolateCakePHP.typeProvider.ViewHelperInViewTypeProvider" />
        <typeProvider3 implementation="com.daveme.chocolateCakePHP.typeProvider.ViewHelperInViewHelperTypeProvider" />
        <typeProvider3 implementation="com.daveme.chocolateCakePHP.typeProvider.ThisVariableInViewTypeProvider" />
    </extensions>


    <application-components>
    </application-components>

    <project-components>
<!--        <component>-->
<!--            <implementation-class>com.daveme.intellij.chocolateCakePHP.components.ChocolateCakeProjectComponent</implementation-class>-->
<!--        </component>-->

    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
</idea-plugin>
